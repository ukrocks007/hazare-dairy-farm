# ============================================
# DATABASE CONFIGURATION
# ============================================
# Database connection string using Prisma format
# For development: SQLite (file-based, no setup required)
DATABASE_URL="file:./dev.db"

# For production: PostgreSQL (recommended)
# Format: postgresql://username:password@host:port/database?schema=public
# Example with connection pooling:
# DATABASE_URL="postgresql://user:password@localhost:5432/fruitland?schema=public&connection_limit=5"

# For production with connection pooling (e.g., using Supabase or Neon):
# DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
# The canonical URL of your site (include protocol and domain)
# Development:
NEXTAUTH_URL="http://localhost:3000"
# Production example:
# NEXTAUTH_URL="https://your-domain.com"

# Secret key used to encrypt JWT tokens and session data
# IMPORTANT: Generate a strong random secret for production
# Generate using: openssl rand -base64 32
# Or use: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# ============================================
# RAZORPAY PAYMENT GATEWAY
# ============================================
# Get your API keys from: https://dashboard.razorpay.com/app/keys
# 
# TEST MODE (Development):
# - Sign up at https://razorpay.com
# - No KYC required for test mode
# - Keys start with 'rzp_test_'
# - Use test card: 4111 1111 1111 1111
#
# LIVE MODE (Production):
# - Complete KYC verification
# - Keys start with 'rzp_live_'
# - Real transactions, actual money

# Public key (exposed to frontend, safe to share)
NEXT_PUBLIC_RAZORPAY_KEY_ID="your_razorpay_test_key_id"

# Secret key (server-side only, NEVER expose to frontend)
RAZORPAY_KEY_SECRET="your_razorpay_test_key_secret"

# Optional: Razorpay Webhook Secret (for payment notifications)
# Get from: Dashboard → Settings → Webhooks
# RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# ============================================
# PAYMENT METHODS CONFIGURATION
# ============================================
# Enable/disable payment methods (values: "true" or "false")

# Online Payment via Razorpay (Cards, UPI, Net Banking, Wallets)
NEXT_PUBLIC_ENABLE_ONLINE_PAYMENT="true"

# Cash on Delivery (COD)
NEXT_PUBLIC_ENABLE_COD="true"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Your application/business name
NEXT_PUBLIC_APP_NAME="Fruitland"

# Base URL of your application
# Development:
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Production example:
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ============================================
# EMAIL CONFIGURATION (Optional - Future Use)
# ============================================
# SMTP settings for sending emails (order confirmations, etc.)
# Using Gmail as example (use App Password, not regular password)
# Gmail setup: https://support.google.com/accounts/answer/185833

# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-16-char-app-password"
# SMTP_FROM_EMAIL="noreply@fruitland.com"
# SMTP_FROM_NAME="Fruitland"

# Alternative providers:
# SendGrid: smtp.sendgrid.net (port 587)
# Mailgun: smtp.mailgun.org (port 587)
# AWS SES: email-smtp.region.amazonaws.com (port 587)

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry for error tracking
# NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
# Environment: development | production | test
# NODE_ENV="development"

# Port for local development (default: 3000)
# PORT=3000

# ============================================
# NOTES
# ============================================
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# All other variables are server-side only and kept secure
# Never commit .env file to version control
# Always use .env.example for documentation
# Generate strong secrets for production
# Use environment-specific values in your deployment platform

